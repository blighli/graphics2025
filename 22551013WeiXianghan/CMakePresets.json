{
    "version": 2,
    "configurePresets": [
        {
            "name": "graphics2025",
            "generator": "Visual Studio 18 2026",
            "binaryDir": "${sourceDir}/build",
            "architecture": {
                "value": "x64"
            },
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
                "VCPKG_TARGET_TRIPLET": "x64-windows"
            },
            "environment": {
                "VCPKG_ROOT": "D:/bin/vcpkg"
            }
        }
    ]
}